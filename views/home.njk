{% extends "layout.njk" %}

    {% block content %}
    <main>
        <section class="recipe-text">
            <div class="content">
                <div class="wrapper">
                    <h1>As melhores receitas</h1>
                    <p>Aprenda a construir os melhores pratos
                        com receitas criadas por profissionais
                        do mundo inteiro.
                    </p>
                </div>

                <img src="/assets/chef.png" alt="">
            </div>       
        </section>

        <section class="most-acessed">
            <div class="content">
                <h1>Mais acessadas</h1>
                <div class="recipe-cards">
                    {% for item in items %}
                        <div class="card">
                            <img src="{{ item.image }}" alt="">
                            <h2>{{ item.title }}</h2>
                            <p>{{ item.author }}</p>
                        </div> 
                    {% endfor %}  
                </div>
            </div>
        </section>
    </main>
    
     <div class="modalOverlay">
        <div class="modal">
            <img src="" alt="">
            <h2></h2>
            <p></p>

            <div class="close-modal">
                Fechar modal
            </div>
        </div>
    </div>   
    
    <script src="/scripts.js"></script>

    {% endblock content %}