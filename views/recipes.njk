{% extends "layout.njk" %}

{% block head %}
    <title>Foodfy - Receitas</title>
{% endblock head %}

{% block menu %}
    <div class="menu">
        <a href="/about">Sobre</a>
        <a style="font-weight: bold;" href="/recipes">Receitas</a>
    </div>
{% endblock %}

{% block content %}
    <main>
        <section class="recipes">
            <div class="content">
                <div class="recipe-cards">                    
                    {% for item in items %}
                        <div class="card">
                            <img src="{{ item.image }}" alt="">
                            <h2>{{ item.title }}</h2>
                            <p>{{ item.author }}</p>
                        </div> 
                    {% endfor %}                                    
                </div>
            </div>
        </section>
    </main>

    <div class="modalOverlay">
        <div class="modal">
            <img src="" alt="">
            <h2></h2>
            <p></p>

            <div class="close-modal">
                Fechar modal
            </div>
        </div>
    </div>       

    <script src="/scripts.js"></script>    
{% endblock content %}
